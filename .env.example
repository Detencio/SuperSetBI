# Configuración de Base de Datos
DATABASE_URL=postgresql://username:password@localhost:5432/supersetbi

# Para Neon Database (recomendado)
# DATABASE_URL=postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/neondb

# Variables específicas de PostgreSQL
PGHOST=localhost
PGDATABASE=supersetbi
PGUSER=supersetbi_user
PGPASSWORD=tu_password_seguro
PGPORT=5432

# Para conexiones SSL (Neon Database)
PGSSL=true

# Configuración de Aplicación
NODE_ENV=development
PORT=5000

# Configuración de Sesiones (futuro)
SESSION_SECRET=tu_clave_secreta_muy_segura_aqui

# Configuración de CORS (producción)
ALLOWED_ORIGINS=http://localhost:5000,https://tu-dominio.com

# Variables de desarrollo
LOG_LEVEL=info
ENABLE_LOGGING=true

# Variables de testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/supersetbi_test